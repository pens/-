{
    // VSCode
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.fontSize": 12,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "trailing",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    "window.autoDetectColorScheme": true,
    "workbench.colorTheme": "Monokai",
    "workbench.preferredDarkColorTheme": "Monokai",
    "workbench.preferredLightColorTheme": "Default Light Modern",

    // HACK: Since macOS needs homebrew ssh, easiest way to handle this is to symlink this path to
    // /usr/bin/ssh on Linux to match.
    // TODO: Once -SK supported by mac SSH, remove.
    "remote.SSH.path": "/usr/local/bin/ssh",

    // Copilot
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "yaml": false
    },

    // C++
    "[cpp]": {
        "editor.tabSize": 2
    },
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,

    // Markdown
    "[markdown]": {
        "editor.tabSize": 2 // for markdownlint
    },

    // Python
    "[python]": {
        "editor.formatOnType": true
    },
    "jupyter.askForKernelRestart": false,

    // Rust
    "rust-analyzer.checkOnSave.command": "clippy",

    // Unreal
    "files.associations": {
        "*.ush": "hlsl",
        "*.usf": "hlsl"
    },
}
