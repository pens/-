[alias]
    restore-staged-and-discard = !git restore --staged \"$@\" && git restore \"$@\"

    br = branch
    ci = commit
    cia = commit --amend
    cin = commit --amend --no-edit
    cp = cherry-pick
    rb = rebase
    rbi = rebase -i
    rs = restore
    rsd = restore-staged-and-discard
    st = status
    sw = switch
